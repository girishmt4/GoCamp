<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Add New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <br>
                    <input class="form-control" type="text" id="title" name="campground[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <br>
                    <input class="form-control" type="text" id="location" name="campground[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <br>
                    <textarea class="form-control" type="text" id="description"
                        name="campground[description]"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <br>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <br>
                        <input class="form-control" type="text" id="price" name="campground[price]" placeholder="0.00">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <br>
                    <input class="form-control" type="text" id="image" name="campground[image]">
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Add Campground</button>
                </div>
            </form>
            <a href="/campgrounds">Back to Home</a>
        </div>
    </div>